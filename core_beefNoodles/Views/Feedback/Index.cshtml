@model core_beefNoodles.Models.Feedback

@{
    ViewData["Title"] = "Index";
}

@addTagHelper *,Microsoft.AspNetCore.Mvc.Taghelpers


<nav class="nav nav-pills nav-fill">
    <a class="nav-item nav-link" a asp-controller="Home" asp-action="Index">首页</a>
    <a class="nav-item nav-link active" asp-controller="Feedback" asp-action="Index">意见反馈</a>
</nav>

<div style="width:100%;">
    <h1>评价</h1>
</div>


<form asp-action="Index" method="post" role="form">
    <div class="form-group row">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label col-form-label-lg">姓名</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control form-control-lg">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label col-form-label-lg">邮箱</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control form-control-lg">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Message" class="col-sm-2 col-form-label col-form-label-lg">反馈</label>
        <div class="col-sm-10">
            <textarea asp-for="Message" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-5">
            <input type="submit" class="btn btn-primary" value="提交意见" />
        </div>
    </div>

</form>
